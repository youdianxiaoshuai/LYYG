.head{
  display: flex;
  flex-direction: column;
  justify-content:flex-end;
  align-items: center;
  height: 192rpx;
  width: 750rpx; 
}
.stBG{
  flex-shrink: 1;
  width:750rpx;
  height:192rpx;
  position: fixed;
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

.item{
  width:180rpx;
  height: 180rpx;
}

.canteenImg{
  width:180rpx;
  height: 180rpx;
}

.canteenInfo{
  width: 750rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  top:10rpx;
  z-index: 2;
}

.canteenName{
  font-weight: 550;
}
.cName{
  margin-top: 5px;
}

.cInfo{
  margin-top:20rpx;
  margin-bottom: 20rpx;
  height: 25rpx;
  font-size: 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.score{
  height: 25rpx;
  margin:0px 20rpx;
}

.saleVolume{
  height: 25rpx;
  margin:0px 20rpx;  
}

.distance{
  height: 25rpx;
  margin:0px 20rpx;  
}

.bottom {
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  background-color: rgb(80,80,82);

}

.left{
  width: 180rpx;
  height:640rpx;
  /* background-color:#f00;  */
  display:flex;
  flex-direction: column;
}

.left view{
  border-bottom: 1px solid #eee;
  border-right: 1px solid #eee;
  background-color: rgb(248,248,248);
  color: rgb(130,130,130);
  font-size: 26rpx;
  padding: 36rpx;
  width: 180rpx;
}
.menuItem{
  width:528rpx;
  height:184rpx;
  padding: 20rpx;
  display: flex;
  margin-bottom: 10px;
}

.right{
  height: 340px;
}