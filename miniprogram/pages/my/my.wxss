
.header-container {
  display: flex;
  flex-direction: row;
  height: 200rpx;
  background-color: rgba(235, 84, 33, 0.8);
}

.header-user{
  margin-top:40rpx;
  display: flex;
  flex-direction: row;
}

.header-text{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}
.header-text text{
  font-size: 25rpx;
}

.header-image{
  display: flex;
  flex-direction: row;
	margin-left: 40rpx;
}

.header-image image{
  border-radius: 100rpx;
  width: 100rpx;
  height: 100rpx;
}

.header-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.header-nickname {
  color: #FFF;
  font-size: 30rpx;
}

.item-container {
  display: flex;
  flex-direction: row;
  background-color: #FFF;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 25rpx;
  align-items: center;
  border-bottom: 1px solid rgb(221, 224, 226);
}

.item-icon {
  height: 50rpx;
  width: 50rpx;
}

.item-label {
  flex: 1;
  font-size: 30rpx;
  color: #000;
  margin-left: 25rpx;
}