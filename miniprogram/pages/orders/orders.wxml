<view class="container">
	<!-- <view class="container-body"> -->
  <scroll-view class="container-body" scroll-y="true" scroll-top="{{scrolltop}}" bindscroll="scrollHandle" lower-threshold="50" bindscrolltolower="scrollLoading">
		<view class="my-reserve-list">
        <navigator class="my-reserve-item" wx:for="{{reservelist}}" wx:key="{{item.id}}" url="../orderDetails/orderDetails?id={{item.id}}&name={{item.name}}&imageurl={{item.imgurl}}">
				<view class="my-reserve-img">
					<image src="{{item.imgurl}}" mode="aspectFill"></image>
				</view>
        <view class="my-reserve-text">
					<view class="my-reserve-title">{{item.name}}</view>
					<text>预定时间：{{item.time}}</text>
					<text>姓名：{{item.reserver}}</text>
          <view wx:if="{{item.state==1}}" class="my-reserve-nocomment"><text>订单完成</text></view>
          <view wx:elif="{{item.state==0}}" class="my-reserve-comment"><text>进行中...</text></view>
          <view class="my-reserve-prices"><text>金额：￥{{item.price}}</text></view>
				</view>
        </navigator>
		</view>
	<!-- </view> -->
  </scroll-view>
</view>