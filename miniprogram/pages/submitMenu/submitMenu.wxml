<view class="page">
    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar" style='background-color:white'>
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <view class="weui-tab__panel">
                <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                <view class="shouhuodizhi">
                  <image src='../../images/shouhuodizhi.png'>
                  </image>
                  
                </view>
                    <view style='margin-top:50rpx'>
                    <view wx:for="{{orders}}" class="items">
                      <image src='{{item.img}}'></image>
                      <view style='margin-left:30rpx'>
                      <view style='display:flex;font-size:30rpx;justify-content:space-between;width:250px;'>
                        <text>{{item.name}}</text>
                        <text>￥{{item.price}}</text>
                      </view>
                        <text style='font-size:25rpx;color:rgb(167,167,167)'>x{{item.count}}</text>
                      </view>
                     </view>
                   </view>
                   <view style='pading:20rpx 10rpx 0rpx;width:750rpx;height:400rpx;margin-top:20px;margin-left:20rpx'>
                   <image src='../../images/xiamian.png' style='width:666rpx;height:330rpx;'></image>
                    </view>
                    <view style='width:100%;height:64rpx;font-size:30rpx;margin-left:40rpx;'>
                      <text>健康评分：</text>
                      <text style='color:rgb(234,84,33)'>9.5</text>
                      <text style='margin-left:360rpx'>小计</text>
                      <text style='color:rgb(234,84,33)'>￥{{total1}}</text>
                    </view>
                      <view class="dixia">
                      <navigator style='width:240rpx;height:84rpx;line-height:84rpx;background-color:rgb(255,210,98);text-align:center' url="../paypal/paypal?money={{total1}}">
                          提交订单
                        </navigator>
                        <view style='height:84rpx;display:flex;flex-direction:column;justify-content:center'>
                          <text style='color:white;margin-right:60rpx;'>合计￥{{total1}}</text>
                        </view>  
                        
                     </view>
                     
                    </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
                    
                    <view style='margin-top:50rpx'>
                    <view wx:for="{{orders}}" class="items">
                      <image src='{{item.img}}'></image>
                      <view style='margin-left:30rpx'>
                      <view style='display:flex;font-size:30rpx;justify-content:space-between;width:250px;'>
                        <text>{{item.name}}</text>
                        <text>￥{{item.price}}</text>
                      </view>
                        <text style='font-size:25rpx;color:rgb(167,167,167)'>x{{item.count}}</text>
                      </view>
                     </view>
                   </view>
                   <view style='pading:20rpx 10rpx 0rpx;width:750rpx;height:400rpx;margin-top:20px;margin-left:20rpx'>
                   <image src='../../images/dixia2.png' style='width:666rpx;height:156rpx;'></image>
                    </view>
                    <view style='width:100%;height:64rpx;font-size:30rpx;margin-left:40rpx;position:absolute;bottom:42px'>
                      <text>健康评分：</text>
                      <text style='color:rgb(234,84,33)'>9.5</text>
                      <text style='margin-left:360rpx'>小计</text>
                      <text style='color:rgb(234,84,33)'>￥{{total2}}</text>
                    </view>
                      <view class="dixia2">
                      <navigator style='width:240rpx;height:84rpx;line-height:84rpx;background-color:rgb(255,210,98);text-align:center'  url="../paypal/paypal?money={{total2}}">
                          提交订单
                        </navigator>
                        <view style='height:84rpx;display:flex;flex-direction:column;justify-content:center'>
                          <text style='color:white;margin-right:60rpx;'>合计￥{{total2}}</text>
                        </view>  
                        
                     </view>
                </view>
            </view>
        </view>
    </view>
</view>